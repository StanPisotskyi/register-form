<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="src.javafx.RegisterController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" />
    </padding>

    <AnchorPane prefHeight="400.0" prefWidth="700.0" style="-fx-background-color: #2E3348;">
        <children>
            <AnchorPane layoutY="64.0" prefHeight="336.0" prefWidth="700.0" style="-fx-background-color: #fafafa;">
                <children>
                    <TextField fx:id="loginInput" layoutX="14.0" layoutY="110.0" prefHeight="38.0" prefWidth="327.0" promptText="Login" />
                    <PasswordField fx:id="passwordInput" layoutX="352.0" layoutY="110.0" prefHeight="38.0" prefWidth="327.0" promptText="Password" />
                    <Button fx:id="registerBtn" layoutX="274.0" layoutY="254.0" mnemonicParsing="false" prefHeight="61.0" prefWidth="134.0" style="-fx-background-color: #F39C63;" text="Register" textFill="WHITE">
                        <font>
                            <Font size="28.0" />
                        </font>
                    </Button>
               <TextField fx:id="nameInput" layoutX="14.0" layoutY="48.0" prefHeight="38.0" prefWidth="327.0" promptText="Name" />
               <TextField fx:id="lastNameInput" layoutX="352.0" layoutY="48.0" prefHeight="38.0" prefWidth="327.0" promptText="Last name" />
               <TextField fx:id="countryInput" layoutX="14.0" layoutY="168.0" prefHeight="38.0" prefWidth="327.0" promptText="Country" />
               <TextField fx:id="languageInput" layoutX="352.0" layoutY="168.0" prefHeight="38.0" prefWidth="327.0" promptText="Language" />
               <CheckBox fx:id="isConfirmed" layoutX="296.0" layoutY="225.0" mnemonicParsing="false" selected="true" text="Confirm" />
                </children>
            </AnchorPane>
            <Label alignment="CENTER" layoutX="308.0" layoutY="14.0" prefHeight="38.0" prefWidth="113.0" text="JavaFX" textFill="#fffbfb">
                <font>
                    <Font name="Arial" size="33.0" />
                </font>
            </Label>
            <Button fx:id="backBtn" layoutX="573.0" layoutY="14.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="113.0" style="-fx-background-color: #F39C63;" text="Back" textFill="WHITE" />
        </children>
    </AnchorPane>
</VBox>
